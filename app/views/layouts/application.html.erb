<!DOCTYPE html>

<head>
<title>Knowledge Thief</title>
<%= csrf_meta_tag %>
<%= stylesheet_link_tag "application" %>
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js" type="text/javascript"></script>
</head>
<body>
    <div id="boxes">
        <div id="dialog" class="window">
            <a href="#"class="close" style="color:black;float:right;"/>close</a><div style='clear:both;'></div>
            <%= render :partial => 'shared/modalPin' %>
        </div>
    </div>
        <!-- Mask to cover the whole screen -->
        <div id="mask"></div>
        

    <div id="ktWrapper">
        <%= render :partial => 'layouts/resourceSlideShow' %>
        <div id="contentWrapper">
            <div id="topSection">
               <% if flash[:notice] %>
                  <p class="notice"><%= flash[:notice] %></p>
                <% end %>
                <% if flash[:error] %>
                  <p class="error"><%= flash[:error] %></p>
                <% end %>
                <div id="logoText">
                    <%= link_to "Knowledge Thief", "/" %>
                </div>
                <%= render 'shared/navMenu' %> 
                <%= render 'shared/search' %>
                <%= render "shared/header" %>
            </div><div style="clear:both;"></div>
            <div class="bottomWrapper">
                <%= yield %>
            </div>
            <div class="addNewResourceForm" style="display:none;">
                <%= render :partial => 'layouts/addResourceForm' %>
            </div>
            <div class="addNewQuestionForm" style="display:none;">
                <%= render :partial => 'layouts/addQuestionForm' %>
            </div>
        </div> <!-- end contentWrapper -->

    </div> <!-- end wrapper -->
    <%= render :partial => 'layouts/resourcebar' %>
    <%= javascript_include_tag "application" %>
</body>

